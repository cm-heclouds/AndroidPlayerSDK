<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--<android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:elevation="8dp"
        app:tabIndicatorColor="@color/colorActivatedLine"
        app:tabIndicatorHeight="1dp"
        app:tabSelectedTextColor="@color/colorActivatedLine"
        app:tabTextColor="@color/colorText2"
        app:tabTextAppearance="@style/TabLayoutTextStyle"/>-->
    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        tl:tl_indicator_color="@color/colorActivatedLine"
        tl:tl_indicator_height="1dp"
        tl:tl_indicator_width="30dp"
        tl:tl_tab_space_equal="true"
        tl:tl_textsize="12dp"
        tl:tl_textSelectColor="@color/colorActivatedLine"
        tl:tl_textUnselectColor="@color/colorText2"
        tl:tl_underline_color="@color/colorLine0"
        tl:tl_underline_height="1px"
        tl:tl_underline_gravity="BOTTOM"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
